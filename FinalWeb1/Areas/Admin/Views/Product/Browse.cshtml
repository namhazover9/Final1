@model ProductVM


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Browse Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4" style="background-color: #FFFCC7">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Name" readonly type="text" class="form-control border-0 shadow" />
                        </div>
                        <div class="py-2 col-12">
                            @* <label asp-for="Product.Description" class="ms-2 text-muted"></label> *@
                            <textarea asp-for="Product.Description" disabled  class="form-control border-0 shadow"></textarea>

                           
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Price" readonly type="text" class="form-control border-0 shadow" />
                            </div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Condition" readonly type="text" class="form-control border-0 shadow" />
                            </div>
                            
                            @* <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Category.Name" readonly type="text" class="form-control border-0 shadow" />
                            </div> *@
                            <div class="form-group">                              
                                <div class="form-floating py-2 col-12">
                                    @Html.DropDownListFor(model => model.Product.isBrowsed, (SelectList)ViewBag.BrowseList, "--Browse--", new { @class = "form-select border-0 shadow" })
                                    
                                    @* <label asp-for="Product.isBrowsed" class="ms-2"></label> *@
                                    <span asp-validation-for="Product.isBrowsed" class="text-danger"></span>
                                    @Html.ValidationMessageFor(model => model.Product.isBrowsed, "", new { @class = "text-danger" })
                                </div>
                            </div>
                           
                          
                            @* <div class="form-floating py-2 col-12">
                                <input type="file" name="files" class="form-control border-0 shadow" multiple />
                                <label asp-for="Product.ProductImages" class="ms-2"></label>
                            </div> *@

                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    @if (Model.Product.Id != 0)
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Browse</button>
                                    }
                                    
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
                <div class="col-2">
                    @if (Model.Product.ProductImages != null)
                    {
                        foreach (var image in Model.Product.ProductImages)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                                @* <a asp-action="DeleteImage" class="btn btn-danger mt-1" asp-route-imageId="@image.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a> *@
                            </div>
                        }
                    }
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

