@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Product
                </a>
            </div>
        </div>

        <table id="myTalbe" class="table table-bordered table-striped hover" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>                   
                    <th>Price</th>               
                    <th>Category</th>
                    <th>Condition</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td>@obj.Category.Name</td>
                        <td>@obj.Condition</td>
                        <td>@obj.Status</td>
                        <td>
                            @if (@obj.Status == "Available")
                            {
                                <div  role="group" style="display:flex; justify-content:center;">
                                    <a asp-controller="Product" asp-action="Browse" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="width:50%;">
                                        <i class="bi bi-pencil-square"></i> @obj.isBrowsed
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="width:50%;">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div  role="group" style="display:flex; justify-content:center;">
                                            <a asp-route-id="@obj.Id" class="btn btn-primary mx-2 disabled" style="width:50%;">
                                        <i class="bi bi-pencil-square"></i> @obj.isBrowsed
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="width:50%;">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

